<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> | DailyEdge Admin</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Custom styles -->
    <link rel="stylesheet" href="/css/style.css">
    
    <style>
        .admin-nav {
            background: var(--nav-bg);
            border-bottom: 1px solid var(--nav-border);
            padding: 1rem 0;
            margin-bottom: 2rem;
        }
        .admin-nav .navbar-brand {
            font-weight: 600;
            color: var(--color-danger);
        }
        .admin-challenge {
            background-color: rgba(139, 92, 246, 0.1);
        }
    </style>
</head>
<body class="animation-fadeIn">
    <!-- Admin Navigation -->
    <nav class="admin-nav">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <div class="navbar-brand">üîê DailyEdge Admin Panel</div>
                <div class="d-flex gap-3 align-items-center">
                    <span class="text-muted">Welcome, <%= currentAdmin.username %></span>
                    <a href="/admin/dashboard" class="btn btn-sm btn-outline-primary">Dashboard</a>
                    <a href="/admin/users" class="btn btn-sm btn-outline-primary">Users</a>
                    <a href="/admin/challenges" class="btn btn-sm btn-primary">Challenges</a>
                    <a href="/admin/logout" class="btn btn-sm btn-danger">Logout</a>
                </div>
            </div>
        </div>
    </nav>

    <main class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Challenge Management</h1>
            <a href="/admin/challenges/create" class="btn btn-success">‚ûï Create New Challenge</a>
        </div>

        <% if (typeof success !== 'undefined') { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <% if (success === 'created') { %>
                    Challenge created successfully!
                <% } else if (success === 'updated') { %>
                    Challenge updated successfully!
                <% } %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <!-- Challenges Table -->
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Duration</th>
                                <th>XP Reward</th>
                                <th>Participants</th>
                                <th>Completions</th>
                                <th>Created By</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% challenges.forEach(challenge => { %>
                                <tr class="<%= challenge.is_admin_created ? 'admin-challenge' : '' %>">
                                    <td><%= challenge.id %></td>
                                    <td>
                                        <strong><%= challenge.title %></strong>
                                        <% if (challenge.is_admin_created) { %>
                                            <span class="badge bg-purple ms-2">Admin</span>
                                        <% } %>
                                    </td>
                                    <td><%= challenge.duration_days %> days</td>
                                    <td><span class="badge bg-success"><%= challenge.xp_reward %> XP</span></td>
                                    <td><%= challenge.participant_count %></td>
                                    <td><%= challenge.completion_count %></td>
                                    <td><%= challenge.created_by || 'system' %></td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a href="/admin/challenges/<%= challenge.id %>/edit" class="btn btn-warning" title="Edit">
                                                ‚úèÔ∏è
                                            </a>
                                            <button class="btn btn-danger" data-challenge-id="<%= challenge.id %>" onclick="deleteChallenge(this.dataset.challengeId)" title="Delete">
                                                üóëÔ∏è
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                            <% if (challenges.length === 0) { %>
                                <tr>
                                    <td colspan="8" class="text-center text-muted">No challenges found</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        async function deleteChallenge(challengeId) {
            if (!confirm('Are you sure you want to delete this challenge? This will also remove it from all users who joined it.')) {
                return;
            }
            
            try {
                const response = await fetch(`/admin/challenges/${challengeId}`, {
                    method: 'DELETE'
                });
                const data = await response.json();
                if (data.success) {
                    alert('Challenge deleted successfully!');
                    location.reload();
                } else {
                    alert('Error: ' + (data.error || 'Unknown error'));
                }
            } catch (err) {
                alert('Error deleting challenge');
            }
        }
    </script>
</body>
</html>
