                        <a href="/habits/add" class="add-new-link">
                            <div class="add-new-content">
                                <div class="add-icon">‚ûï</div>
                                <h3 class="add-title">Add New Habit</h3>
                                <p class="add-subtitle">Start building a new routine</p>
                            </div>
                        </a>
                    </div>
                </div>
            <% } else { %>
